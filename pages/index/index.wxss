/**index.wxss**/
.container {
  height: 100vh;
  width: 100vw;
  color: #19251c;
  background: linear-gradient(#7ffcbb, #ffffff, #FFFFFF);
}

.title {
  position: fixed;
  font-size: 2rem;
  font-weight: bold;
  z-index: 2;
}

.containerInput {
  font-size: 3rem;
  color: #FFFFFF;
  width: 20vw;
  height: 20vw;
  background-color: #222222;
  border-radius: 10%;
  margin: 0 5vw;
  display: flex;
  text-align: center;
}

.bg {
  position: fixed;
  top: 15%;
  box-sizing: border-box;
  width: 92%;
  padding: 0 4vw;
  border-radius: 5vw;
  min-height: 100vh;
  background-color: #FFFFFF;
  box-shadow: rgb(218, 218, 218) 0px 6px 5px;
  /* transform: skewY(-2deg); */
  transform: matrix(1, -0.04, 0, 1, -0.04, 0);
  z-index: 0;
}

.project {
  position: fixed;
  z-index: 3;
  box-sizing: border-box;
  width: 92%;
  padding: 0 4vw;
  border-radius: 5vw;
  max-height: 69vh;
  margin-top: 38%;
}

.menu {
  position: relative;
  display: flex;
  flex-direction: column;
  width: 100%;
  height: 3vh;
}

.menu view:nth-child(1) {
  display: flex;
  justify-content: space-between;
  color: #999;
  font-size: 0.7rem;
  font-weight: bold;
  padding: 0 15vw 0 7vw;
}
.menu view:nth-child(2) {
  position: absolute;
  width: 100%;
  height: 0.1vh;
  bottom: 0;
  background-color: #eee;
}

.scroll {
  height: 56vh;
  overflow: scroll;
}

.project-title {
  position: relative;
  display: flex;
  font-weight: bold;
  color: #101010;
  font-size: 1.1rem;
  margin-bottom: 4vh;
}

.project-title text {
  width: 100%;
  text-align: center;
  z-index: 3;
}

.project-item {
  position: relative;
  width: 100%;
  display: flex;
  justify-content: space-between;
  margin: 2vh 0;
  padding-bottom: 0.4vh;
  padding: 0 10vw 0 5vw;
  align-items: center;
  box-sizing: border-box;
}


.item-line {
  z-index: 2;
  position: absolute;
  height: 1.2vh;
  width: 32%;
  left: 50%;
  transform: translateX(-50%);
  bottom: -8%;
  background: linear-gradient(to right, #1ffb91, #1ffb9106);
  border-radius: 2vw;
}


.but {
  position: absolute;
  bottom: 5vh;
  background-color: #1ffb91;
  color: #19251c;
  width: 90vw !important;
  border-radius: 10vw;
  font-size: 1rem;
  font-weight: bold;
}

.projectInput {
  width: 14vw;
  text-align: center;
  display: inline-block;
}

.projectInput2 {
  width: 15vw;
  text-align: center;
  display: inline-block;
}

.title {
  margin-bottom: 3vh;
  display: flex;
  font-weight: bolder;
  align-items: center;
  z-index: 3;
}



.title2 {
  color: #1ffb91;
  position: fixed;
  top: 2.6%;
  z-index: 2;
}

.title2 text:nth-child(1) {
  margin-right: 30vw;
}

.jianContent {
  position: absolute;
  right: 0;
  display: flex;
  align-items: center;
  justify-content: center;
  height: 5vw;
  width: 5vw;
  margin: 0 2vw 0 0 !important;
}

.jian {
  padding: 0 0 0.4vh 0;
  width: 3vw !important;
  height: 3vw;
  border-radius: 1.5vw;
  color: #FFF;
  font-size: 1rem;
  overflow: visible;
  background-color: #ccc;
  display: flex;
  align-items: center;
  justify-content: center;
}

.jia {
  margin-top: 4vh;
  background-color: #19251c;
  border-radius: 5vw;
}

.jia view {
  background-image: -webkit-linear-gradient(left, #7ffcbb, #d3fdad);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
}

.jiaProject {
  background-color: #19251c;
}

.text2 {
  padding: 0 1vw;
  border-radius: 1.2vw;
  color: #101010;
  font-weight: bold;
  font-size: 0.8rem;
}

.text3 {
  padding: 0 1vw;
  background-color: #1ffb91;
  border-radius: 1.2vw;
  color: #101010;
  height: 3vh;
  font-size: 0.8rem;
}

.text4 {
  padding: 0 1vw;
  background-color: #FFFFFF;
  border-radius: 1.2vw;
  border: 0.1vw solid #101010;
  color: #101010;
  height: 3vh;
}

button {
  color: #FFFFFF;
